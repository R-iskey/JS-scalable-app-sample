{
    "env": {
        "browser": true,
        "commonjs": false,
        "es6": true
    },
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-plusplus":"off",
        "func-names": "off",
        "no-trailing-spaces":["error", { "skipBlankLines": true }],
        "no-param-reassign": ["error", { "props": false }],
        "padded-blocks": ["error", { "classes": "never" }],
        "comma-dangle": ["error", "only-multiline"],
        "arrow-body-style": ["error", "always"]
    }
}
